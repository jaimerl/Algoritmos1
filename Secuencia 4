#include "stdafx.h"
#include "conio.h"
#include <iostream>
void secuencia(int a);

using namespace std;

void main(){
	int a;
	cout<<"Ingrese un numero: ";
	cin>>a;
	secuencia(a);
}


void secuencia(int a){
	int k,i; k=0;
	for(i=1;i<=a;i++){
		if(k==0){
			cout<<" a, ";
			k=1;
		}
		else{{if(k==1){
			cout<<" b, ";
		k=2;}
		else{
			cout<<" c, ";
			k=0;
		}
		}
		}
	}
}
